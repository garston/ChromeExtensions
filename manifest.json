{
  "manifest_version": 2,

  "name": "Flowdock Chrome extension",
  "description": "This extension does stuff with Flowdock",
  "version": "1.0",

  "background": {
    "scripts": ["common.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": [
    "https://api.flowdock.com/",
    "storage",
    "tabs"
  ]
}
